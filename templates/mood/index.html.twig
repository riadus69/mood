{% extends 'base.html.twig' %}

{% block title 'Tableau des Moods' %}

{% block body %}

    <div class="mt-4">

        <div class="container">
            <div class="alert alert-success" id="success-alert">
                <button type="button" class="close" data-dismiss="alert">x</button>
                <strong> Avatar déplacé avec succés. </strong>
            </div>
            <div class="alert alert-warning" id="warning-alert">
                <button type="button" class="close" data-dismiss="alert">x</button>
                <strong> Avatar non déplacé ! </strong>
            </div>
            <div class="alert alert-danger" id="danger-alert">
                <button type="button" class="close" data-dismiss="alert">x</button>
                <strong>Une erreur s'est produite. </strong>
            </div>
        </div>

        <div class="drag-container"></div>
        <div class="board">

            {{ include('mood/component/column.html.twig', {name_column: 'sad', users: users_sad}) }}
            {{ include('mood/component/column.html.twig', {name_column: 'happy', users: users_happy}) }}
            {{ include('mood/component/column.html.twig', {name_column: 'very-happy', users: users_very_happy}) }}

        </div>
    </div>


{% endblock %}

{% block javascripts %}

    <!-- pour Libray drag & drop -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/web-animations/2.3.2/web-animations.min.js"
            type="text/javascript"></script>
    <script src="https://cdn.jsdelivr.net/gh/haltu/muuri@0.9.3/dist/muuri.min.js" type="text/javascript"></script>
    <!-- Library snippet js qui va s'appliqué sur /mood -->
    <script src="{{ asset('js/snippet.js') }}"></script>

{% endblock %}